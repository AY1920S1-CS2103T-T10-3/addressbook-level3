<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" prefHeight="400.0" prefWidth="400.0" style="-fx-background-color: #383838;" >
    <HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
        <GridPane HBox.hgrow="ALWAYS">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
            </columnConstraints>
            <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
                <padding>
                    <Insets top="5" right="5" bottom="5" left="15" />
                </padding>
                <HBox spacing="5" alignment="CENTER_LEFT">
                    <Label fx:id="id" styleClass="cell_big_label">
                        <minWidth>
                            <!-- Ensures that the label text is never truncated -->
                            <Region fx:constant="USE_PREF_SIZE" />
                        </minWidth>
                    </Label>
                    <Label fx:id="description" text="\$first" styleClass="cell_big_label" style="-fx-text-fill: #00A5F0" />
                </HBox>
                <FlowPane fx:id="tags" />
                <Label fx:id="itemdetails" styleClass="cell_small_label" text="\$itemdetails" style="-fx-text-fill: white"/>
            </VBox>
        </GridPane>
    </HBox>
</VBox>

